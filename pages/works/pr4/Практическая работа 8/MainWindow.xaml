<Window x:Class="Практическая_работа_8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практическая_работа_8"
        mc:Ignorable="d"
        Title="Времена года" Height="450" Width="800">
    <Grid  Background="Green">
        <Label Content="Выбирите время года" FontSize="20" Margin="10,10,0,0"/>
        <ComboBox x:Name="season" SelectionChanged="season_SelectionChanged" Background="#FFA3FF01" HorizontalAlignment="Center" FontSize="30" Height="50" Margin="10,20,10,300">
            <ComboBoxItem Content="Весна" HorizontalAlignment="Center" FontSize="30" ></ComboBoxItem>
            <ComboBoxItem Content="Лето" HorizontalAlignment="Center" FontSize="30" ></ComboBoxItem>
            <ComboBoxItem Content="Осень" HorizontalAlignment="Center" FontSize="30" ></ComboBoxItem>
            <ComboBoxItem Content="Зима" HorizontalAlignment="Center" FontSize="30" ></ComboBoxItem>

        </ComboBox>
        <Image x:Name="picture" Margin="0,130,0,20"/>

    </Grid>
</Window>
